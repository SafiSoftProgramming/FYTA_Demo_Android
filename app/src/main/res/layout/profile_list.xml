<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">



    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imgv_profile_pic_list"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:elevation="1dp"
        android:src="@drawable/ic_defult_user_circ"
        app:civ_border_color="@color/fyta"
        app:civ_border_width="2dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:elevation="1dp"
        android:layout_marginTop="-70dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="80dp"
            android:layout_gravity="start">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_plant_count_profile" />

            <TextView
                android:id="@+id/txtv_plant_count_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Plants"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_fyta_count_profile" />
            <TextView
                android:id="@+id/txtv_beams_count_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="0"
                android:gravity="center"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Sensors"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="1dp"
        android:layout_marginTop="-35dp"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/imgv_rank_icon_list"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_rate_profile" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_star_rate_list"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            app:lottie_speed="0.5"
            android:elevation="1dp"
            app:lottie_rawRes="@raw/ic_stars_rate" />

        <TextView
            android:id="@+id/txtv_member_name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Safi Zidan"
            android:gravity="center"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/txtv_rank_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Your Rank 651"
            android:gravity="center"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/txtv_date_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="FLOS Member Since 29/10/2019"
            android:gravity="center"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/txtv_location_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Berlin , Germany"
            android:gravity="center"
            android:layout_gravity="center"/>
    </LinearLayout>



    <ImageView
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginTop="-165dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_profile_list_bg" />




</LinearLayout>
