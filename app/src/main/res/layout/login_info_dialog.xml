<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="415dp"
        android:gravity="center_horizontal"
        android:background="@drawable/ic_dialog_bg"
        android:orientation="vertical">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/gifTextView_ic_blu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            app:lottie_speed="0.5"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/ic_sensor_face_kiss" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/gifTextVi_blu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="-18dp"
            android:layout_marginEnd="34dp"
            android:layout_gravity="end"
            app:lottie_speed="0.5"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/ic_sensor_arm" />


        <ImageView
            android:layout_width="128dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:elevation="-1dp"
            android:src="@drawable/ic_fyta_splash_text" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/gifTextView_ic_bluetooth"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="-58dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/ic_dot_splash" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:text="For the FLOS App to function properly, you must accept a few user permissions."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />



        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/btn_ok_in_dialog"
                android:layout_width="230dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_eff_login"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="I Understand"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>


            </LinearLayout>







</LinearLayout>