<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">


    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="220dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center">
    <ImageButton
        android:id="@+id/btn_the_list"
        android:layout_width="300dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_eff_the_list"
        android:scaleType="fitXY" />

<LinearLayout
    android:layout_width="300dp"
    android:layout_height="220dp"
    android:clickable="false"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgv_plant_pic"
        app:shapeAppearanceOverlay="@style/Gardens_list_carve"
        android:layout_width="298dp"
        android:layout_height="73dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:src="@drawable/ic_rose_try"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/fyta"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="3dp"
                    android:src="@drawable/ic_search_plant_name_ico"
                    />
                <TextView
                    android:id="@+id/txtv_plant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message fg d hfgh gf hfghgfhgf hf hgf "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_garden_list_home"
                    />
                <TextView
                    android:id="@+id/txtv_plant_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgv_connect_state"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
             />

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgv_water_state"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="-55dp"
            android:src="@drawable/ic_garden_list_water" />
        <TextView
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:text="Water"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgv_nutrient_state"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="-55dp"
            android:src="@drawable/ic_garden_list_nutrient" />
        <TextView
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:text="Nutrient"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgv_light_state"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp" />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="-55dp"
            android:src="@drawable/ic_garden_list_light" />
        <TextView
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:text="Light"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgv_temp_state"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp" />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="-55dp"
            android:src="@drawable/ic_garden_list_temp" />
        <TextView
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:text="Temp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/black"/>
    </LinearLayout>





</LinearLayout>



</LinearLayout>

    </FrameLayout>

</LinearLayout>
