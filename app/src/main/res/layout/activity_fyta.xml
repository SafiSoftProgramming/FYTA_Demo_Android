<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_notification_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:animateLayoutChanges="true"
    tools:context=".FytaActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout_activity_control"
        android:layout_alignParentTop="true"
        android:scrollbars="none">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_logo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imgv_profile_pic_fyta"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/ic_defult_user_circ"
                app:civ_border_color="#0E563E"
                app:civ_border_width="1dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Hi Safi"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:text="LEARN MORE ABOUT YOUR PLANT"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"/>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end"
            android:elevation="1dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="215dp"
                android:layout_height="45dp"
                android:layout_gravity="end">

                <ImageButton
                    android:id="@+id/btn_demo1"
                    android:layout_width="215dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_eff_identify_plant"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="Identify my plant"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="end">

                <ImageButton
                    android:id="@+id/btn_demo2"
                    android:layout_width="170dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_eff_plant_health"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="-7dp"
                        android:gravity="center"
                        android:text="Plant Health Check"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="105dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="end">

                <ImageButton
                    android:id="@+id/btn_demo3"
                    android:layout_width="105dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_eff_library_fyta"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="Library"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>



        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="692dp"
            android:layout_marginTop="-250dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_fyta_pg" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/gifTextVi_blu"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="end"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="-80dp"
            android:rotation="-20"
            app:lottie_speed="0.3"
            android:elevation="1dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/ic_arrow_green" />


    </LinearLayout>




    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout_activity_control"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:gravity="end"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="end"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/btn_go_home"
                android:layout_width="60dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_btn_home_not" />

            <ImageView
                android:id="@+id/btn_go_library"
                android:layout_width="60dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_btn_library_not" />

            <ImageView
                android:id="@+id/btn_go_profile"
                android:layout_width="60dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_btn_profile_not" />


            <ImageView
                android:id="@+id/btn_go_gardens"
                android:layout_width="60dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_btn_gardens_not" />


            <ImageView
                android:id="@+id/btn_go_settings"
                android:layout_width="60dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_btn_settings_not" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_go_fyta"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_btn_v_fyta" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/gifTextView_ic_bluetooth"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="-33dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/ic_dot_splash" />


            </LinearLayout>




        </LinearLayout>

    </LinearLayout>


</RelativeLayout>